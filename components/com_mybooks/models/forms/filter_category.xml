<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="filter">
		<field name="filter_search"
		       type="text"
		       label="COM_MYBOOKS_SEARCH_IN_TITLE"
		       class="js-stools-search-string" />

		<field name="filter_ordering" type="list"
			label="COM_MYBOOKS_SORTING_FILTER_LABEL"
			onchange="this.form.submit();" default="" >
			<option value=""></option>
			<option value="order">COM_MYBOOKS_ORDERING_ORDERING_ASC</option>
			<option value="rorder">COM_MYBOOKS_ORDERING_ORDERING_DESC</option>
			<option value="alpha">COM_MYBOOKS_ORDERING_TITLE_ASC</option>
			<option value="ralpha">COM_MYBOOKS_ORDERING_TITLE_DESC</option>
			<option value="creator">COM_MYBOOKS_ORDERING_CREATOR_ASC</option>
			<option value="rcreator">COM_MYBOOKS_ORDERING_CREATOR_DESC</option>
			<option value="date">COM_MYBOOKS_ORDERING_DATE_ASC</option>
			<option value="rdate">COM_MYBOOKS_ORDERING_DATE_DESC</option>
			<option value="hits">COM_MYBOOKS_ORDERING_HITS_ASC</option>
			<option value="rhits">COM_MYBOOKS_ORDERING_HITS_DESC</option>
		</field>

		<field name="limit"
	               type="limitbox"
		       class="inputbox input-small"
		       default="25"
		       label="COM_MYBOOKS_LIST_LIMIT"
		       description="COM_MYBOOKS_LIST_LIMIT_DESC"
		       onchange="this.form.submit();"/>
	</fieldset>
</form>
